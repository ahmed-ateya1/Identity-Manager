@model LoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Register</h1>
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" name="returnURL" value="@ViewBag.ReturnUrl"/>

        <div class="border p-2 rounded">
            <p class="text-center">create a new Account</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                 <label asp-for="Email" class="col-12">Email</label>
                 <div class="col-md-12">
                     <input asp-for="Email" class="form-control"/>
                     <span asp-validation-for="Email" class="text-danger"></span>
                 </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group">
                <div class="custom-checkbox">
                   <label>
                       <input asp-for="RememberMe"/>
                       Remember Me
                   </label>
                </div>
            </div
            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">
                        Login
                    </button>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a asp-action="Register">Register as A new User</a>
                    </div>
                      <div class="col-6 text-end">
                        <a asp-action="ForgetPassword">Forget your password ?</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}